{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "ignoreDeprecations": "6.0",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "src/feature/types/express.d.ts"],
  "exclude": ["node_modules"]
}
